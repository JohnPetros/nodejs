{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>

{{else}}

{{/each}}
<h3>Editar postagem</h3>
<div class="card">
  <div class="card-body">
    <form action="/admin/post/edit" method="POST">
    <input type="hidden" name="id" value="{{post._id}}">
      <label for="name">Título: </label>
      <input
        type="text"
        name="title"
        id="title"
        class="form-control"
        value="{{post.title}}"
        required
      />
      <label for="slug">Slug: </label>
      <input
        type="text"
        name="slug"
        id="slug"
        class="form-control"
        value="{{post.slug}}"
        required
      />
      <label for="slug">Descrição: </label>
      <input
        type="text"
        name="description"
        id="description"
        class="form-control"
        value="{{post.description}}"
        required
      />
      <label for="content">Conteúdo: </label>
      <textarea name="content" class="form-control mb-4">{{post.content}}</textarea>
         <label for="category">Categoria:</label>
         <select name="category" class="form-control">
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </option>
         </select><br>
      <br />
      <button type="submit" class="btn btn-success">Editar postagem</button>
    </form>
  </div>
</div>