<h2>Lista de postagens: </h2>
<hr />
<a href="/admin/posts/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each posts}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{title}}</h4>
      <p>Descrição: {{description}}</p>
      <small>Data: {{date}}</small><br>
      <small>Categoria: {{category.name}}</small><br><br>
      <a href="/admin/posts/edit/{{_id}}"><button class="btn btn-success">Editar postagem</button></a>
    </div>
  </div>
{{else}}

{{/each}}