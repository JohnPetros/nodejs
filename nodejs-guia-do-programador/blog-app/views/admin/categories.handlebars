<h2>Lista de categorias: </h2>
<hr>
<a href="/admin/categories/add"><button class="btn btn-success">Nova categoria</button></a>

{{#each categories}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{name}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de criação: {{date}}</small><br><br>
            <a href="/admin/categories/edit/{{id}}"><button class="btn btn-success">Editar categoria</button></a><br><br>
            <form action="/admin/categories/delete" method="POST">
                <input type="hidden" name="id" value={{_id}}>
                <button type="submit" class="btn btn-danger">Deletar</button>
            </form>
        </div>
    </div>
{{else}}
    <h4 class="mt-3">Nenhum categoria registrada!</h4>

{{/each}}