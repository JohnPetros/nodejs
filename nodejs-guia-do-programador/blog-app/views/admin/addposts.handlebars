<div class="card">
  <div class="card-body">
    <h4>Nova postagem: </h4>
    <form action="">
      <label for="title">Título: </label>
      <input type="text" name="title" class="form-control" /><br>
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control" /><br>
      <label for="description">Descrição:</label>
      <input type="text" name="description" class="form-control" /><br>
      <label for="content">Conteúdo:</label>
      <input type="text" name="content" class="form-control" /><br>
      <textarea name="content" class="w-100 mt-4"></textarea>
         <label for="content">Conteúdo:</label>
         <select name="category" class="form-control mt-4 w-100">
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </option>
         </select><br>
      <button class="btn btn-success" type="submit">Criar postagem</button>
    </form>
  </div>
</div>