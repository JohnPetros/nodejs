{{#each errors}}
  <div class="alert alert-danger">{{text}}</div>

{{else}}

{{/each}}
<div class="card">
  <div class="card-body">
    <h4>Nova postagem: </h4>
    <form action="/admin/posts/new" method="post">
      <label for="title">Título: </label>
      <input type="text" name="title" class="form-control" required /><br>
      <label for="slug">Slug: </label>
      <input type="text" name="slug" class="form-control" required /><br>
      <label for="description">Descrição:</label>
      <input type="text" name="description" class="form-control" required/><br>
      <label for="content">Conteúdo:</label>
      <textarea name="content" class="form-control mb-4"></textarea>
         <label for="category">Categoria:</label>
         <select name="category" class="form-control">
                {{#each categories}}
                    <option value="{{_id}}">{{name}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </option>
         </select><br>
      <button class="btn btn-success" type="submit">Criar postagem</button>
    </form>
  </div>
</div>